{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchPackagePrefixes": [
        "@types/",
        "eslint"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "posthog-js"
      ],
      "automerge": true
    }
  ]
}
